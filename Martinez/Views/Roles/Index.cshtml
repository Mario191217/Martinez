@model IEnumerable<Martinez.Models.Roles>

@{
    ViewBag.Title = "Index";
}


<center><h2>Roles</h2></center>
<p style="width:20%;">
    @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-primary btn-lg btn-block", })
</p>
<table class="table jumbotron" style="background-color:#EFF5FB; color: #000000">
    <tr class="bg-dark"  style="color: #fff">
        <th>
            @Html.DisplayNameFor(model => model.Rol)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @*@Html.ActionLink("Editar", "Edit", new { id = item.IdRol }) |*@
                @Html.ActionLink("Detalles", "Details", new { id = item.IdRol }, new { @class = "btn btn-info" }) |
                @*@Html.ActionLink("Eliminar", "Delete", new { id = item.IdRol })*@
            </td>
        </tr>
    }

</table>
