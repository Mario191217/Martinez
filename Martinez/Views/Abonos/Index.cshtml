@model IEnumerable<Martinez.Models.Abonos>

@{
    ViewBag.Title = "Index";
}


<center><h2>Abonos</h2></center>
<p style="width:20%;">
    @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-primary btn-lg btn-block", })
</p>
<table class="table jumbotron" style="background-color:#EFF5FB; color: #000000">
    <tr class="bg-dark" style="color: #fff">
        <th>
            @Html.DisplayNameFor(model => model.Trabajos.Trabajo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Abono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaAbono)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Trabajos.Trabajo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAbono)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.IdAbono }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.IdAbono }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdAbono }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
