@model Martinez.Models.Abonos

@{
    ViewBag.Title = "Edit";
}

<style>
    input {
        max-width: 95%;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .text-left {
        justify-content: center;
    }

    .control-label {
        padding-left: 30px
    }
</style>


<center>
    <div class="jumbotron col-sm-5" style="background-color: #EFF5FB; color: #000000">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Editar Informacion de Abonos</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdAbono)

                <div class="form-group mb-3 text-left">
                    @Html.LabelFor(model => model.Abono, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Abono, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Abono, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mb-3 text-left">
                    @Html.LabelFor(model => model.IdTrabajo, "IdTrabajo", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("IdTrabajo", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdTrabajo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mb-3 text-left">
                    @Html.LabelFor(model => model.FechaAbono, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FechaAbono, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FechaAbono, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-info" })
                        <input type="submit" value="Guardar" class="btn btn-success" />
                    </div>
                </div>
            </div>
         
        }

      

        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        </center>